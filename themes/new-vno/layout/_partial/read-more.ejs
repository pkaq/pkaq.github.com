<section class="read-more">
     <% if (page.prev || page.next){ %>      
        <% if (page.prev){ %>       
            <div class="read-more-item">
                <span class="read-more-item-dim">最近的文章</span>
                <h2 class="post_more"><a href="<%- config.root %><%- page.prev.path %>" title="<%= page.prev.title %>"><%= page.prev.title %></a></h2>         
            </div>
        <% } %>
        
        <% if (page.next){ %>       
            <div class="read-more-item">
                <span class="read-more-item-dim">更早的文章</span>
                <h2 class="post_more"><a href="<%- config.root %><%- page.next.path %>" title="<%= page.next.title %>"><%= page.next.title %></a></h2>              
            </div>
        <% } %>
   <% } %>
</section>